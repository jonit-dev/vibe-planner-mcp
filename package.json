{
  "name": "vibe-planner",
  "version": "1.0.0",
  "description": "A basic Hello World MCP server.",
  "main": "dist/server.js",
  "license": "ISC",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "NODE_ENV=development nodemon --watch src --ext ts,json --exec 'yarn build && yarn start'",
    "test": "vitest --run",
    "start:api": "ts-node src/http-api/index.ts",
    "dev:api": "nodemon --watch src/http-api --watch src/vibeplanner --watch .db_reset_sentinel --ext ts,json --exec 'ts-node src/http-api/index.ts'",
    "ui:dev": "concurrently --names \"api,client\" --prefix-colors \"red,blue\" \"yarn dev:api\" \"yarn --cwd client dev\"",
    "db:reset": "node scripts/reset-db.js"
  },
  "keywords": [
    "mcp",
    "server",
    "typescript"
  ],
  "author": "",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "better-sqlite3": "^11.10.0",
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "winston": "^3.17.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.18",
    "concurrently": "^8.2.2",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^1.6.0",
    "vitest-mock-extended": "^1.0.0"
  }
}
